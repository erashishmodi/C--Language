@model SingleViewCrudoperation.Models.EmployeeViewModel
<!DOCTYPE html>
<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>Index</title>
</head>
<body>
    <div>
        @using (Html.BeginForm("Index","Employee",FormMethod.Post))
        {
            <p>
                @Html.HiddenFor(x => x.EmployeeId)
            </p>
            <p>
                @Html.LabelFor(x => x.EmployeeName)
                @Html.TextBoxFor(x => x.EmployeeName)
                @Html.ValidationMessageFor(x => x.EmployeeName)
            </p>
            <p>
                @Html.LabelFor(x => x.EmployeeEmail)
                @Html.TextBoxFor(x => x.EmployeeEmail)
                @Html.ValidationMessageFor(x => x.EmployeeEmail)
            </p>
            <p>
                @Html.LabelFor(x => x.IdDeleted)
                @Html.CheckBoxFor(x => x.IdDeleted)
                @Html.ValidationMessageFor(x => x.IdDeleted)
            </p>
            <p>
                <input type="submit" name="command" value="Save" />
            </p>
        }
    </div>
    <div>
        <table border="1">
            <thead>
                <tr>
                    <td>@Html.DisplayNameFor(x => x.EmployeeId)</td>
                    <td>@Html.DisplayNameFor(x => x.EmployeeName)</td>
                    <td>@Html.DisplayNameFor(x => x.EmployeeEmail)</td>
                    <td>@Html.DisplayNameFor(x => x.IdDeleted)</td>
                    <td colspan="2">Action</td>
                </tr>
            </thead>
            <tbody>
                @foreach (var item in ViewData["EmployeeList"] as IEnumerable<SingleViewCrudoperation.Employee>)
                {
                    <tr>
                        <td>@item.EmployeeId</td>
                        <td>@item.EmployeeName</td>
                        <td>@item.EmployeeEmail</td>
                        <td>@item.IsDeleted</td>
                        <td>@Html.ActionLink("Edit", "Edit", new { id = item.EmployeeId })</td>
                        <td>@Html.ActionLink("Delete", "Delete", new { id = item.EmployeeId }, new { onclick = "return confirm('Are You Sure To delete The record ?');" })</td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
</body>
</html>