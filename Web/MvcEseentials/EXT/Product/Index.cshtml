@{
    ViewBag.Title = "Products";
    Layout = "~/Views/Shared/_Admin.cshtml";
}
@model SpaSystem.Areas.Admin.Models.ProductViewModel
<div class="row">
    <div class="panel panel-primary">
        <div class="panel-heading">
            <h2 class="panel-title">@ViewBag.Title</h2>
        </div>
        <div class="panel-body">
            <table class="table table-striped table-responsive table-hover table-bordered">
                <thead>
                    <tr>
                        <th class="text-center">Product Image</th>
                        <th class="text-center">Product Name</th>
                        <th class="text-center">Unit</th>
                        <th class="text-center">Category Name</th>                        
                        <th class="text-center">Description</th>
                        <th class="text-center">Reorder Level</th>
                        <th class="text-center" colspan="2">Action</th>                        
                    </tr>
                </thead>
                <tbody>
                    @foreach (var product in ViewBag.Products)
                    {
                        <tr>
                            <td class="text-center"><img src="~/Files/Images/Product/@(product.ProductId+".jpg")" alt="@product.ProductName" class="img-responsive img-rounded" height="50" width="50"/></td>
                            <td class="text-center">@product.ProductName</td>
                            <td class="text-center">@SpaSystem.Areas.Admin.Models.UnitBao.GetUnitNameByUnitId(product.UnitId)</td>
                            <td class="text-center">@SpaSystem.Areas.Admin.Models.CategoryBao.GetCategoryNameByCategoryId(product.CategoryId)</td>
                            <td class="text-center">@product.ProductDesc</td>
                            <td>Will be Coming Soon</td>
                            <td class="text-center">
                                <a class="btn btn-success" href="~/Admin/Product/EditProduct/@product.ProductId">Edit</a>
                            </td>
                            <td class="text-center">
                                @Html.ActionLink("Delete", "DeleteProduct", new { Id = product.ProductId }, new { @class = "btn btn-danger" })
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
            <p><a href="~/Admin/Product/AddProduct" class="btn btn-success form-control ">Add Product</a></p>
            </div>
        </div>
    </div>
